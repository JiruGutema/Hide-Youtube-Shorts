{
  "manifest_version": 3,
  "name": "Hide YouTube Shorts",
  "version": "1.0",
  "description": "Removes YouTube Shorts from homepage, sidebar, and blocks Shorts pages.",
  "permissions": [
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
