{
  "manifest_version": 2,
  "name": "Hide YouTube Shorts",
  "version": "1.0",
  "description": "Hides the Shorts section on the YouTube homepage",
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
